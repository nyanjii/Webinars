@{
    ViewBag.Title = "Home Page";
}

<table>
        <tr data-bind="template: { name: 'law-tab-template', foreach: lawsArray }"></tr>
        <tr colspan="3">
            <td rowspan="2" data-bind="template: { name: 'single-video-template', data: webinar }"></td>
            <td data-bind="template: {name: 'list-item-video-template', foreach: webinars}"></td>
        </tr>
</table>


<script type="text/html" id="law-tab-template">
            <td data-bind="click: $parent.getAllWebinars.bind($data)">
        <img src="../../Content/Images/icon-t36.png" />
        <p>Вебинары по <span data-bind="text: Name"></span></p>
            </td>
</script>

@*<div data-bind="template: {name: 'list-item-video-template', foreach: webinars}"></div>*@

@*<div>
<div data-bind="template: { name: 'single-video-template', data: webinar }"></div>
</div>*@

<script type="text/html" id="single-video-template">
    <iframe width="560" height="315" 
            data-bind="attr: {src : VideoUrl}"
            frameborder="0" allowfullscreen>
    </iframe>
</script>



<script type="text/html" id="list-item-video-template">
    <tr data-bind="click: $parent.playWebinar.bind($data)">
        <td>
        <span data-bind="text: Name"></span>
        <img data-bind="attr: {src: VideoImageUrl}" />
        </td>
    </tr>
</script>


@section Scripts{
    @Scripts.Render("~/Scripts/AppScripts/LawWebinarsViewModel.js");
}


